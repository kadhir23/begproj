    <!-- JS LOGIC -->
    <script>

const menuData = [
    { id: 1, name: "Truffle Arancini", category: "starters", price: 12, desc: "Crispy risotto balls infused with black truffle.", img: "https://images.unsplash.com/photo-1541529086526-db283c563270?auto=format&fit=crop&w=800&q=80" },
    { id: 2, name: "Burrata Salad", category: "starters", price: 16, desc: "Fresh burrata cheese, heirloom tomatoes, pesto.", img: "https://images.unsplash.com/photo-1529312266912-b33cf6227e24?auto=format&fit=crop&w=800&q=80" },
    { id: 3, name: "Pan-Seared Salmon", category: "mains", price: 28, desc: "Atlantic salmon, asparagus, lemon butter.", img: "https://images.unsplash.com/photo-1467003909585-2f8a7270028d?auto=format&fit=crop&w=800&q=80" },
    { id: 4, name: "Herb Crusted Lamb", category: "mains", price: 32, desc: "Rack of lamb, rosemary crust, vegetables.", img: "https://images.unsplash.com/photo-1544025162-d76690b60944?auto=format&fit=crop&w=800&q=80" },
    { id: 5, name: "Wild Mushroom Risotto", category: "mains", price: 24, desc: "Porcini mushrooms, parmesan, truffle oil.", img: "https://images.unsplash.com/photo-1476124369491-e7addf5db371?auto=format&fit=crop&w=800&q=80" },
    { id: 6, name: "Classic Tiramisu", category: "desserts", price: 10, desc: "Espresso-soaked ladyfingers, mascarpone cream.", img: "https://images.unsplash.com/photo-1571115177098-24ec42ed204d?auto=format&fit=crop&w=800&q=80" },
    { id: 7, name: "Molten Lava Cake", category: "desserts", price: 12, desc: "Warm chocolate cake with molten center.", img: "https://images.unsplash.com/photo-1624353365286-3f8d62daad51?auto=format&fit=crop&w=800&q=80" },
    { id: 8, name: "Signature Mojito", category: "drinks", price: 9, desc: "Rum, mint, lime, soda.", img: "https://images.unsplash.com/photo-1513558161293-cdaf765ed2fd?auto=format&fit=crop&w=800&q=80" },
    { id: 9, name: "Artisan Espresso", category: "drinks", price: 4, desc: "Single origin espresso.", img: "https://images.unsplash.com/photo-1514432324607-b0905bf561c0?auto=format&fit=crop&w=800&q=80" }
];

let cart = [];

/* INITIAL RENDER */
window.onload = () => {
    renderMenu(menuData);
    updateCartUI();
};

/* PAGE SWITCH */
function showPage(pageId) {
    document.querySelectorAll('.page-section').forEach(p => p.classList.remove('active-page'));
    document.getElementById(`${pageId}-page`).classList.add('active-page');
    window.scrollTo(0, 0);
}

/* RENDER MENU */
function renderMenu(items) {
    const grid = document.getElementById("menu-grid");
    grid.classList.remove("show");

    grid.innerHTML = items.map(item => `
        <article class="menu-item">
            <img src="${item.img}" class="item-img">
            <div class="item-content">
                <div class="item-header">
                    <h3 class="item-title">${item.name}</h3>
                    <span class="item-price">$${item.price.toFixed(2)}</span>
                </div>
                <p class="item-desc">${item.desc}</p>
                <button class="add-btn" onclick="addToCart(${item.id})">
                    <i class="fas fa-plus"></i> Add to Cart
                </button>
            </div>
        </article>
    `).join('');

    setTimeout(() => {
        grid.classList.add("show");
    }, 50);
}

/* FILTER MENU */
function filterMenu(category) {
    document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');

    const filtered = category === "all" ? menuData : menuData.filter(x => x.category === category);
    renderMenu(filtered);
}

/* CART FUNCTIONS */
function addToCart(id) {
    const item = menuData.find(i => i.id === id);
    const exist = cart.find(i => i.id === id);

    if (exist) {
        exist.quantity++;
        showToast(`Added another ${item.name}`);
    } else {
        cart.push({ ...item, quantity: 1 });
        showToast(`Added ${item.name} to cart`);
    }

    updateCartUI();
}

function changeQuantity(id, value) {
    const target = cart.find(i => i.id === id);
    if (!target) return;

    target.quantity += value;

    if (target.quantity <= 0) {
        cart = cart.filter(i => i.id !== id);
    }

    updateCartUI();
}

function removeItem(id) {
    cart = cart.filter(i => i.id !== id);
    updateCartUI();
}

function updateCartUI() {
    const cartCount = document.getElementById("cart-count");
    const cartList = document.getElementById("cart-items");
    const cartTotal = document.getElementById("cart-total");

    const emptyMsg = document.getElementById("cart-empty");
    const cartContent = document.getElementById("cart-content");

    cartCount.innerText = cart.reduce((a, b) => a + b.quantity, 0);

    if (cart.length === 0) {
        emptyMsg.style.display = "block";
        cartContent.style.display = "none";
        return;
    }

    emptyMsg.style.display = "none";
    cartContent.style.display = "block";

    let total = 0;

    cartList.innerHTML = cart.map(item => {
        total += item.price * item.quantity;
        return `
            <li class="cart-item">
                <div>
                    <h4>${item.name}</h4>
                    <span class="cart-item-price">$${item.price.toFixed(2)}</span>
                </div>

                <div class="cart-controls">
                    <button class="qty-btn" onclick="changeQuantity(${item.id}, -1)">-</button>
                    <span>${item.quantity}</span>
                    <button class="qty-btn" onclick="changeQuantity(${item.id}, 1)">+</button>
                </div>

                <button class="remove-btn" onclick="removeItem(${item.id})">Remove</button>
            </li>
        `;
    }).join('');

    cartTotal.innerText = `$${total.toFixed(2)}`;
}

/* CHECKOUT */
function processCheckout() {
    alert(`Thank you for your order!\nYour total: ${document.getElementById("cart-total").innerText}`);
    cart = [];
    updateCartUI();
    showPage("home");
}

/* FEEDBACK */
function submitFeedback(e) {
    e.preventDefault();
    showToast("Thank you for your feedback!");
    e.target.reset();
    setTimeout(() => showPage("home"), 1500);
}

/* TOAST */
function showToast(msg) {
    const toast = document.getElementById("toast");
    toast.innerText = msg;
    toast.classList.add("show");
    setTimeout(() => toast.classList.remove("show"), 3000);
}

    </script>

</body>
